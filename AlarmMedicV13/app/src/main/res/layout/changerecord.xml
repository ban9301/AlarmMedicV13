<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ml"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/edtMediumName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MediumName"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="50dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/time_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtdate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="50dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/date_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time(s) Everyday :"
        android:textSize="30dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTimesEveryday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time(s) Everyday :"
            android:textSize="30dp"
            android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/SpTimesEveryday2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration :"
        android:textSize="30dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration :"
            android:textSize="30dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/SpDuration2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change"
        android:text="Change Record"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete3"
        android:text="Delete Record"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backbtn"
        android:text="Back to Menu"
        />
</LinearLayout>